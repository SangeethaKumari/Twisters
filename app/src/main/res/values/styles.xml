<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/margin_general</item>
        <item name="android:textSize">@dimen/button_textSize</item>
    </style>




    <style name="CustomButtonAStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@color/buttonAColor</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="CustomButtonBStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:background">@color/buttonBColor</item>
        <item name="android:layout_weight">1</item>
    </style>



</resources>
